{
  "manifest_version": 3,
  "name": "Grade-Able",
  "icons": {
    "16": "Logo.png",
    "24": "Logo.png",
    "32": "Logo.png",
    "48": "Logo.png"
  },
  "version": "0.1.0",
  "description": "Grade search results by WCAG and show accessibility badges on Google results.",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": [
    "<all_urls>",
    "https://azn-intelligence-grade-abled.onrender.com/*",
    "*://www.google.com/*",
    "*://google.com/*"
  ],
  "background": { "service_worker": "sw.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:* https://azn-intelligence-grade-abled.onrender.com"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "Logo.png",
      "32": "Logo.png",
      "48": "Logo.png",
      "128": "Logo.png"
    },
    "default_popup": "popup.html",
    "default_title": "Grade-Able"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "",
      "strict_min_version": "109.0"
    }
  }
}
